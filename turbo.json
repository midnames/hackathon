{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "compact": {
      "dependsOn": ["^build"],
      "outputs": ["src/managed/**", "src/gen/**", "gen/**"]
    },
    "build": {
      "dependsOn": ["^build", "compact"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },    
    "lint": {
      "dependsOn": ["compact", "^build"]
    }  
  }
}
